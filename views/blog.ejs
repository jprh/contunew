            </div>
        </div>
    </section>

    <!-- Older posts -->
    <section class="mt-7 fx-fade-up">
        <div class="container">
            <div class="text-dark text-uppercase-bold-sm">Más Artículos</div>

            <div class="row mt-4" is="dmx-repeat" id="repeatlowerrow" dmx-bind:repeat="data_view3.data">
                <!-- Post -->
                <div class="col-md-4">
                    <!-- Featured image -->
                    <a dmx-bind:href="'blog/'+path">
                        <img class="img-fluid rounded hover-lift-light" alt="" dmx-bind:src="img">
                    </a>

                    <!-- Title -->
                    <a href="#!" class="h5 d-block text-dark text-decoration-none mt-4" dmx-html="title" dmx-bind:href="'blog/'+path">

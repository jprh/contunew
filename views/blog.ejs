    <section class="fx-fade-up top-padding-hero" style="/* position: relative */">
        <div class="container">
            <h1 class="text-dark text-uppercase-bold-sm">Artículos Destacados sobre Aduana y Comercio Exterior</h1>
            <div class="row mt-4" id="repeatleft" is="dmx-repeat" dmx-bind:repeat="data_view1.data">

                <!-- Main post -->
                <div class="col-lg-7">
                    <!-- Featured image -->
                    <a href="#!" dmx-bind:href="'blog/'+path">
                        <img class="img-fluid rounded hover-lift-light" alt="" dmx-bind:src="img" loading="lazy">
                    </a>

                    <!-- Title -->
                    <a href="#" class="h2 d-block text-dark text-decoration-none mt-4" dmx-html="title" dmx-bind:href="'blog/'+path">

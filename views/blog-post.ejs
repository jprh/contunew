<!-- Hero -->
<section class="bg-cover position-relative h-550 pt-11 jarallax style163 top-padding-hero overlay overlay-darkblue overlay-40" data-jarallax data-speed="0.8" dmx-style:background-image="'url('+serverconnect1.data.query[0].img+')'" style="/* filter: blur (200px) */">
    <div class="container-fluid blog-hero-container">
        <!-- Post title -->
        <h1 class="display-4 text-white text-center fx-fade-up" dmx-html="serverconnect1.data.query[0].title"></h1>
    </div>

    <!-- Author & social -->
    <div class="position-absolute bottom-0 w-100 mb-4">
        <div class="d-flex flex-sm-row blog-hero-container flex-row align-items-center justify-content-around">
            <div class="d-flex">
                <div class="avatar mr-4">
                    <img src="inertia/dist/assets/img/uifaces/1%202.jpg" class="avatar-image rounded-circle" alt="">
                </div>
                <div class="flex-1">
                    <span class="text-white text-uppercase-bold-sm" dmx-html="serverconnect1.data.query[0].author">
                    </span>
                    <span class="text-light opacity-90 font-size-sm d-block">
                        Posted on {{serverconnect1.data.query[0].date.formatDate('dd/MM/yyyy')}}
                    </span>
                </div>
            </div>

            <!-- Social links -->
            <div>
                <a class="icon-circle icon-circle-sm bg-white text-dark hover-lift-light mr-2" href="https://www.linkedin.com/company/contucarga/">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="#" class="icon-circle icon-circle-sm bg-white text-dark hover-lift-light mr-2 visually-hidden">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="#" class="icon-circle icon-circle-sm bg-white text-dark hover-lift-light visually-hidden">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Article -->
<section class="mt-6">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8" dmx-html="{{serverconnect1.data.query[0].body}}">
                <!-- Intro phrase -->
                {{serverconnect1.data.query[0].body}}
                <!-- Author & social -->
                <div class="d-flex flex-column flex-sm-row align-items-center mt-6">
                    <div class="d-flex">
                        <div class="avatar mr-4">
                            <img src="inertia/dist/assets/img/uifaces/1.jpg" class="avatar-image rounded-circle" alt="">
                        </div>
                        <div class="flex-1">
                            <span class="text-dark text-uppercase-bold-sm">
                                John Harrison
                            </span>
                            <span class="text-muted opacity-90 font-size-sm d-block">
                                Posted on April 14, 2020
                            </span>
                        </div>
                    </div>

                    <!-- Social links -->
                    <div class="mt-4 mt-sm-0 ml-sm-auto">
                        <a href="#" class="text-decoration-none text-muted mr-3">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none text-muted mr-3">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none text-muted">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

